@if (Request.IsAuthenticated)
{
    <ul>
        <li>@Html.ActionLink("Hello, " + User.Identity.Name + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "login-link", title = "Manage" })</li>
        <li><a class="login-link" href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
        
        }
    </ul>
}
else
{
    <ul>
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "login-link" })</li>
        <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "login-link" })</li>
    </ul>
}
